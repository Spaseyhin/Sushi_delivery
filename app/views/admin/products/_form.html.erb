<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">


 
          <%= form_with model: [:admin, @product], local: true, html: { multipart: true } do |f| %>

            
            <!-- Название -->
            <div class="mb-3">
              <%= f.label :name, t('create_product.name'), class: 'form-label fw-semibold' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Введите название' %>
            </div>

            <!-- Описание -->
            <div class="mb-3">
              <%= f.label :description, t('create_product.description'), class: 'form-label fw-semibold' %>
              <%= f.text_area :description, rows: 3, class: 'form-control', placeholder: 'Введите описание' %>
            </div>

            <!-- Цена -->
            <div class="mb-3">
              <%= f.label :price, t('cart.price'), class: 'form-label fw-semibold' %>

              <%= f.number_field :price, step: 0.01, class: 'form-control', placeholder: 'Введите цену' %>
            </div>

            <!-- Фото -->
            <div class="mb-3">
              <%= f.label :image, t('create_product.photo'), class: 'form-label fw-semibold' %>
              <%= f.file_field :image, class: 'form-control' %>

              <% if f.object.image.attached? %>
                <div class="mt-3 text-center">
                  <%= image_tag url_for(@product.image), class: "card-img-top", style: "object-fit: contain; padding: 10px;" if @product.image.attached? %>

                </div>
              <% end %>
            </div>

            <!-- Кнопки -->
            <div class="d-flex justify-content-between mt-4">
              <%= f.submit t('create_product.button_create'), class: 'btn custom-red-btn w-50 me-2' %>
              <%= link_to t('create_product.back'), admin_products_path, class: 'btn btn-secondary w-50' %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
