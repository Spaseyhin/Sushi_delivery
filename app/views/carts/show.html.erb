<h1>Ваша корзина</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Общая стоимость</th>
        <th>Действие</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %> ₽</td>
          <td><%= item.quantity %></td>
          <td><%= item.product.price * item.quantity %> ₽</td>
          <td>
            <%= link_to "Удалить", cart_item_path(item), method: :delete, data: { confirm: "Удалить товар из корзины?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Итоговая сумма: <%= @total_price %> ₽</h3>

  <%= link_to "Оформить заказ", orders_path, method: :post, class: "btn btn-primary" %>
<% else %>
  <p>Ваша корзина пуста.</p>
<% end %>
